{
  "name": "economic-justice-backend",
  "version": "1.0.0",
  "description": "Backend API for Economic Justice Platform with real-time features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "build": "npm run lint && npm test",
    "migrate": "node db/migrate.js",
    "migrate:create": "node db/create-migration.js",
    "migrate:rollback": "node db/migrate.js --rollback",
    "docker:build": "docker build -t economic-justice-api .",
    "docker:run": "docker run -p 3000:3000 economic-justice-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "compression": "^1.7.4",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2"
  },
  "keywords": ["economic-justice", "api", "real-time", "social-platform"],
  "author": "Economic Justice Platform Team",
  "license": "MIT"
}